<!-- /Kieker/kieker-monitoring/test/kieker/test/monitoring/junit/probe/spring/executions/jetty/webapp/jetty.xml -->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
       
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="java.lang.System"/>
        <property name="targetMethod" value="setProperty"/>
        <property name="arguments">
          <list>
            <!-- Remove need for JDK at runtime http://wiki.eclipse.org/Jetty/Howto/Configure_JSP#Compiling_JSPs -->
            <value>org.apache.jasper.compiler.disablejsr199</value>
            <value>true</value>
          </list>
        </property>
    </bean>
    
    <bean id="Server"
          class="org.eclipse.jetty.server.Server" init-method="start" destroy-method="stop">
        <property name="connectors">
            <list>
                <bean id="Connector" class="org.eclipse.jetty.server.nio.SelectChannelConnector">
                    <property name="port" value="9293"/>
                </bean>
            </list>
        </property>

        <property name="handler">
            <bean id="handlers"
                  class="org.eclipse.jetty.server.handler.HandlerCollection">
                <property name="handlers">
                    <list>
                        <bean id="contexts"
                              class="org.eclipse.jetty.server.handler.ContextHandlerCollection">
                            <property name="handlers">
                                <list>
                                    <bean class="org.eclipse.jetty.webapp.WebAppContext">
                                        <property name="contextPath" value="/"/>
                                        <property name="war" value="src/SPRING/webapp">
                                        </property>
                                    </bean>
                                </list>
                            </property>
                        </bean>
                    </list>
                </property>
            </bean>
        </property>
    </bean>
</beans>