<project name="Tutorial-Example" basedir="." default="run">

	<property file="build.properties" />

	<path id="classpath">
		<fileset dir="${lib.dir}" includes="**/*.jar" />
	</path>

	<condition property="not-all-files-available">
		<resourcecount property="num.requiredLibsFound" when="ne" count="9">
			<fileset dir="${lib.dir}">
				<include name="${jar.file.kieker}" />
				<include name="${jar.file.aopalliance}" />
				<include name="${jar.file.aspectjweaver}" />
				<include name="${jar.file.commons.logging}" />
				<include name="${jar.file.spring.aop}" />
				<include name="${jar.file.spring.beans}" />
				<include name="${jar.file.spring.context}" />
				<include name="${jar.file.spring.core}" />
				<include name="${jar.file.spring.expression}" />
			</fileset>
		</resourcecount>
	</condition>
	
	<target name="-check-files" if="not-all-files-available">
		<fail message="${msg.filesNotFound}" />
	</target>

	<target name="run" depends="-check-files, -build-jar">
		<java fork="true" classname="${main-class}">
			<classpath>
				<path refid="classpath" />
				<path location="${jar.file}" />
			</classpath>
            <arg value="${num.requests}" />
			<jvmarg value="-Dkieker.monitoring.writer.filesystem.AsyncFsWriter.customStoragePath=${monitoring.logs.dir}" />
		</java>
	</target>

	<target name="-build-jar" depends="-compile">
		<copy file="config/spring-config.xml" tofile="${build.dir}/config/spring-config.xml" />
		<jar destfile="${jar.file}" basedir="${build.dir}">
			<manifest>
				<attribute name="Main-Class" value="${main-class}" />
			</manifest>
		</jar>
		<delete dir="${build.dir}" />
	</target>

	<target name="-compile" depends="-init">
		<javac source="1.6" target="1.6" srcdir="${src.dir}" destdir="${build.dir}" classpathref="classpath" includeAntRuntime="false" />
	</target>

	<target name="-init">
		<delete dir="${build.dir}" />
		<delete dir="${monitoring.logs.dir}" />
		<mkdir dir="${build.dir}" />
		<mkdir dir="${monitoring.logs.dir}" />
	</target>

	<target name="clean">
		<delete file="${jar.file}" />
	</target>

</project>
